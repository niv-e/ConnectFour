@page
@model ConnectFourWebApplication.Pages.Player.RegistrationModel

@{
    ViewData["Title"] = "Registration";
}

<h1>Registration</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerBoundary.PlayerId" class="control-label"></label>
                <input asp-for="PlayerBoundary.PlayerId" class="form-control" />
                <span asp-validation-for="PlayerBoundary.PlayerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PlayerBoundary.FirstName" class="control-label"></label>
                <input asp-for="PlayerBoundary.FirstName" class="form-control" />
                <span asp-validation-for="PlayerBoundary.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerBoundary.PhoneNumber" class="control-label"></label>
                <input asp-for="PlayerBoundary.PhoneNumber" class="form-control" />
                <span asp-validation-for="PlayerBoundary.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerBoundary.Country" class="control-label"></label>
                <input asp-for="PlayerBoundary.Country" class="form-control" />
                <span asp-validation-for="PlayerBoundary.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
